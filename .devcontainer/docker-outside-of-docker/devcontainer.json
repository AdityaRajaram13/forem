// This is the Docker-outside-of-Docker (DooD) version of the Forem DEVcontainer.
// It is more performant than the Docker-in-Docker (DiD) version, but may require additional configuration. This is not supported on Github Codespace.
{
  "name": "Forem DEVcontainer DooD (Supports Apple Silicon)",
  "build": {
    "dockerfile": "../Dockerfile"
  },
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "remoteEnv": {
    "LOCAL_WORKSPACE_FOLDER": "${localWorkspaceFolder}"
  },
  "features": {
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {
      "version": "latest",
      "enableNonRootDocker": "false",
      "moby": "true"
    }
  },
  "updateContentCommand": "dip provision",
  "postCreateCommand": "bash .devcontainer/postCreateCommand-init.sh",
  "postAttachCommand": "bash .devcontainer/postAttachCommand-init.sh && dip up web",
  "remoteUser": "root"
}
