// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/docker-in-docker
{
  "name": "Forem devcontainer",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest",
      "enableNonRootDocker": "false",
      "moby": "false"
    }
  },
  "updateContentCommand": "dip provision",
  "postCreateCommand": "bash .devcontainer/postCreateCommand-init.sh",
  "postAttachCommand": "bash .devcontainer/postAttachCommand-init.sh && dip up web"
}
